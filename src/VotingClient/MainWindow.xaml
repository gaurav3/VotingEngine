<Window x:Class="VotingClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        Title="MainWindow" Height="200" Width="200">
    <Window.Resources>
        <DataTemplate x:Key="ItemTemplate">
            <Image Source="{Binding Path=Image}"/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <tb:TaskbarIcon x:Name="MainNotifyIcon"
            IconSource="/Resources/Star.ico"
            ToolTipText="Click to Vote!">

        <tb:TaskbarIcon.TrayPopup>
            <Border
          Background="White"
          BorderBrush="Orange"
          BorderThickness="2"
          CornerRadius="4"
          Width="Auto"
                Height="Auto">
                <ListBox ItemTemplate="{StaticResource ItemTemplate}" ItemsSource="{Binding Path=States}" SelectedItem="{Binding SelectedState}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel IsItemsHost="True" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Border>
        </tb:TaskbarIcon.TrayPopup>
</tb:TaskbarIcon>

    </Grid>
</Window>
